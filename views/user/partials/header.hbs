<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchIcon = document.querySelector('.search-icon');
        const searchInputContainer = document.querySelector('.search-input-container');

        searchIcon.addEventListener('click', function () {
            searchInputContainer.classList.toggle('show');
        });
    });

</script>

<script>
    let { generateResultsHTML } = require("../../helpers/userHelper");

    $("#search-item").submit((e) => {
        e.preventDefault();
        e.preventDefault();
        let searchKeyword = $('#searchItem').val().trim();
        let url = "/shop?search=" + encodeURIComponent(searchKeyword);
        console.log(url)

        console.log(url)
        $.ajax({
            url: url,
            method: "get",
            success: function (response) {
                let resultsHTML = generateResultsHTML(response);
                $('#searchResults').html(resultsHTML);
            },
            error: function (error) {
                console.log(error);
            }
        });

    })
        // Send AJAX request

</script>