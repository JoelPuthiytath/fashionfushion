<main class="main-wrap">
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products grid</h2>
                <p>Lorem ipsum dolor sit amet.</p>
            </div>
            <div>
                {{!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                <a href="#" class="btn btn-light rounded  font-md">Import</a> --}}
                <a href="/admin/add_product" class="btn btn-primary btn-sm rounded">Add Product</a>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4">
                        <form action="/admin/page-products/search" method="get">
                            <div class="col-lg-8 mt-2">
                                <input type="text" name="item" placeholder="Search..." class="form-control">
                            </div>
                            <div class="col-lg-4">
                                <button type="submit" class="btn btn-sm mt-2 rounded">Search</button>

                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4 ">
                        <form action="/admin/page-products/sort" method="get">
                            <div class="row gx-3">
                                <div class="col-lg-8">
                                    <select name="sortBy" class="form-select" style="background-color: #fff;">
                                        <option value="">Sort By</option>
                                        <option value="product_name">Name</option>
                                        <option value="product_price">Price</option>
                                    </select>
                                </div>
                                <div class="col-lg-4">
                                    <button type="submit" class="btn btn-sm mt-2 rounded">Sort</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="col-lg-4">
                        <div class="col-lg-8">
                            <select name="category" class="form-select" style="background-color: #fff;">
                                <option value="">Select Category</option>
                                {{#each category}}
                                <option value="{{this.category_name}}">{{this.category_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <button type="submit" class="btn btn-sm mt-2 rounded">Categorise</button>
                        </div>

                    </div>

                </div>

                {{!-- <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>Latest added</option>
                        <option>Cheap first</option>
                        <option>Most viewed</option>
                    </select>
                </div> --}}
            </header> <!-- card-header end// -->

            <div class="card-body">
                {{#if message}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>{{message.message}}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                {{/if}}
                <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                    {{#if products}}
                    {{#each products}}
                    <div class="col-lg-3 col-md-4 col-6">
                        <div class="card card-product-grid">
                            <a href="#" class="img-wrap"> <img src="/uploads/{{this.product_image.[0]}}" alt="Product">
                            </a>
                            <div class="info-wrap">
                                <a href="#" class="title text-truncate">{{this.product_name}}</a>
                                <div class="price mb-2">â‚¹{{this.deal_price}}</div> <!-- price.// -->
                                <a href="/admin/edit-product?id={{this._id}}"
                                    class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                                {{!-- <a href="/admin/user-edit?id={{this._id}}" class="btn btn-info">Edit</a> --}}
                                <a href="/admin/delete-product?id={{this._id}}">
                                    <button class="btn btn-sm font-sm btn-light rounded"
                                        onclick=" return confirm ('Do you want to delete {{this.product_name}}')">
                                        <i class="material-icons md-delete_forever"> </i>
                                        Delete
                                    </button>
                                </a>
                            </div>
                        </div> <!-- card-product  end// -->
                    </div> <!-- col.// -->
                    {{/each}}
                    {{else}}
                    <div class="text-center w-100">
                        <h4> No products in the stock</h4>

                    </div>
                    {{/if}}
                </div> <!-- row.// -->
            </div>
        </div>

        <div class="pagination-area mt-30 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    {{#each (range 1 totalPages)}}
                    <li class="page-item {{#ifCond ../currentPage this}}active{{/ifCond}}">
                        <a class="page-link" href="/admin/page-products?page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>


    </section> <!-- content-main end// -->
