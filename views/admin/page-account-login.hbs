    <style>
        .form__group {
            position: relative;
            padding: 20px 0 0;
            width: 100%;
            max-width: 180px;
        }

        .form__field {
            font-family: inherit;
            width: 250px;
            margin-left: 10px;
            border: none;
            border-bottom: 2px solid #9b9b9b;
            outline: 0;
            font-size: 15px;
            color: #9b9b9b;
            padding: 7px 0;
            background: transparent;
            transition: border-color 0.2s;
        }

        .form__field::placeholder {
            color: transparent;

        }

        .form__field:placeholder-shown~.form__label {
            font-size: 13px;
            cursor: text;
            margin-left: 10px;
            top: 20px;
        }

        .form__label {
            position: absolute;
            top: 0;
            display: block;
            transition: 0.2s;
            font-size: 17px;
            color: #9b9b9b;
            pointer-events: none;
        }

        .form__field:focus {
            padding-bottom: 6px;
            font-weight: 500;
            border-width: 3px;
            border-image: linear-gradient(to right, #116399, #38caef);
            border-image-slice: 1;
        }

        .form__field:focus~.form__label {
            position: absolute;
            top: 0;
            display: block;
            transition: 0.2s;
            font-size: 14px;
            color: #38caef;
            font-weight: 500;
        }

        /* reset input */
        .form__field:required,
        .form__field:invalid {
            box-shadow: none;
        }
    </style>


    <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                {{#if message}}
                <div class="alert alert-warning fs-6 alert-dismissible fade show text-center mx-auto" role="alert">
                    <strong>{{message.message}}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                </div>
                {{/if}}
                <h4 class="card-title mb-4">Sign in</h4>
                <form method="post" action="/admin/login">
                    <div class="mb-3 form__group">
                        <input class="form-control form__field" name="username" placeholder="Username or email"
                            type="text">
                        <label class="form__label">Username or email</label>
                    </div> <!-- form-group// -->
                    <div class="mb-3 form__group">
                        <input class="form-control form__field" name="password" placeholder="Password" type="password">
                        <label class="form__label">Password</label>
                    </div> <!-- form-group// -->
                    <div class="mb-3">
                        <a href="#" class="float-end font-sm text-muted">Forgot password?</a>
                        <label class="form-check">
                            <input type="checkbox" class="form-check-input" checked="">
                            <span class="form-check-label">Remember</span>
                        </label>
                    </div> <!-- form-group form-check .// -->
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary w-100"> Login </button>
                    </div> <!-- form-group// -->
                </form>
            </div>
            <p class="text-center mb-4">Don't have account? <a href="#">Sign up</a></p>
        </div>
