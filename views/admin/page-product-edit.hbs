<main class="main-wrap">
  <section class="content-main">
    <form class="form-horizontal" action="/admin/edit-product?id={{product._id}}" method="post" enctype="multipart/form-data">

      <div class="row">
        <div class="col-9">
          <div class="content-header">
            <h2 class="content-title">Edit Product</h2>
          </div>
        </div>
        <div class="col-6 ml-30">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Basic</h4>
            </div>
            {{#if product}}
            {{#with product}}
            <div class="card-body">
              <div class="mb-4">
                <label for="product_name" class="form-label">Product Titile</label>
                <input type="text" placeholder="{{this.product_name}}" value="{{this.product_name}}" name="product_name" class="form-control"
                  id="product_name">
              </div>
              <div class="mb-4">
                <label for="product_brand" class="form-label">Product Brand</label>
                <input type="text" placeholder="{{this.product_brand}}" value="{{this.product_brand}}" name="product_brand" class="form-control"
                  id="product_brand">
              </div>
              <div class="mb-4">
                <label class="form-label">Full description</label>
                <input type="taxt" width="200px" height="300px" placeholder="{{this.product_description}}"value="{{this.prdouct_description}}" name="product_description" class="form-control"
                  rows="4"></textarea>
              </div>
              <div class="mb-4">
                <label for="product_stock" class="form-label">Product Stock</label>
                <input type="number" placeholder="{{this.in_stock}}" value="{{this.in_stock}}" name="product_stock" class="form-control"
                  id="product_stock">
              </div>

              <div class="row">
                <div class="col-4 ml-20">
                  <div class="mb-4">
                    <label class="form-label">Regular price</label>
                    <div class="row gx-2">
                      <input placeholder="${{this.product_price}}" value="{{this.product_price}}" type="number" name="regular_price"
                        class="form-control">
                    </div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="mb-4 ml-20">
                    <label class="form-label">Promotional price</label>
                    <input placeholder="${{this.deal_price}}" value="{{this.deal_price}}" name="promotional_price" type="number"
                      class="form-control">
                  </div>
                </div>
              </div>
            </div>
            {{/with}}
            {{/if}}

          </div> <!--card end// -->
        </div>
        <div class="col-3 ml-10">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Media</h4>
            </div>
            <div class="card-body">
              <div class="input-upload">
                <img src="/admin-assets/imgs/theme/upload.svg" alt="">
                <input class="form-control" name="image" type="file" multiple >
              </div>
              <div class="mb-4 mt-5">
                <label class="form-label"> Add Cover Photo</label>
                <input class="form-control" name="cover_photo" type="file">
              </div>
            </div>
          </div>
          <div class="card mb-3">
            <div class="card-header">
              <h4>Organization</h4>
            </div>
            <div class="card-body">
              <div class="row gx-2">
                <div class="col-8 ml-10">
                  {{#if category}}
                  <select name="category" class="form-select">
                    <option selected  value="{{product.category._id}}">{{product.category.category_name}}</option>
                    {{#each category}}
                    <option value="{{this.category_name}}">{{this.category_name}}</option>
                    {{/each}}
                  </select>
                  {{/if}}

                </div>
              </div> <!-- row.// -->
            </div>
            <input type="submit" class="btn btn-md rounded font-sm hover-up" value="Publich">
          </div> <!-- card end// -->
        </div>
        <div id="image-preview" class="col-2 card-body">
   
          {{#each product.product_image}}
          <img src="/uploads/{{this}}" width="100px" height="100px" alt="" srcset="">
          {{/each}}


        </div>
      </div>

    </form>
