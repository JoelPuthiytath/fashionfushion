<div style="background-color: #fff;">
    <div class="row justify-content-center">
        <div class="col-md-3"></div>
        <div class="col-md-3 ">
            <div class="mb-4">
                <h3>Add Coupon</h3>
            </div>
            <form id="coupon-form">
                <div class="form-group">
                    <label for="discountAmount">Discount Percentage:</label>
                    <input type="number" class="form-control" id="discountAmount" name="discountPercentage" required>
                </div>

                <div class="form-group">
                    <label for="expiryDate">Expiry Date:</label>
                    <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                </div>

                <div class="form-group">
                    <label for="minimumPurchaseAmount">Minimum Purchase Amount:</label>
                    <input type="number" class="form-control" id="minimumPurchaseAmount" name="minimumPurchaseAmount"
                        required>
                </div>
                <div class="form-group">
                    <label for="maxDiscount">Maximum Discount Amount:</label>
                    <input type="number" class="form-control" id="maxDiscount" name="maxDiscount">
                </div>

                <div class="form-group">
                    <label for="userLimitation">User Limitation:</label>
                    <input type="number" class="form-control" id="userLimitation" name="userLimitation" required>
                </div>
                <button type="submit" class="btn btn-primary">Create Coupon</button>
            </form>
        </div>


        <div class="col-md-6">
            <div class="card-body" style="height:50vh">
                {{#if message}}
                <div class="alert alert-warning fs-6 alert-dismissible fade show text-center mx-auto" role="alert">
                    <strong>{{message.message}}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                </div>
                {{/if}}
                {{#if coupons}}
                <table id="couponTable" class="table table-bordered text-center">
                    <div class="card-header">
                        <h4>Existing Coupons</h4>
                    </div>
                    <thead style="background-color: rgb(11, 44, 61); color:aliceblue">
                        <tr>
                            <th scope="col">Coupon code</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Minimum purachse</th>
                            <th scope="col">Max Discount</th>
                            <th scope="col">Expiry Date</th>
                            <th scope="colgroup">options</th>
                        </tr>
                    </thead>
                    <tbody class="thead-light">
                        {{#each coupons}}
                        <td>{{couponCode}}</td>
                        <td>{{discountPercentage}}%</td>
                        <td> ₹ {{minimumPurchaseAmount}}</td>
                        <td>₹ {{maxDiscount}}</td>
                        <td>{{dateFormat expiryDate}}</td>
                        <td> <a href="edit-coupon?id={{_id}}"> <button class="btn btn-sm">Edit</button> </a>
                            <a href="delete-coupon?id={{_id}}"><button class="btn btn-sm">Delete</button> </a>
                        </td>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}

            </div>
        </div>

    </div>
</div>
