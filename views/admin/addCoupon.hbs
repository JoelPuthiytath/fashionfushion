<script>

    $("#coupon-form").submit((e) => {
        e.preventDefault();
        $.ajax({
            url: "/admin/addCoupon",
            method: "POST",
            data: $("#coupon-form").serialize(),
            success: (response) => {
                location.reload()
            },
        });
    });

</script>